<h1>CodeCraft participants</h1>

<table>
  <tr>
    <th>Username</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Position</th>
    <th>Actions</th>
  </tr>
  <% @participants.each do |participant| %>
    <tr>
      <td><%= link_to participant.username, participant.link, target: '_blank' %></td>
      <td><%= participant.first_name %></td>
      <td><%= participant.last_name %></td>
      <td><%= participant.position_name %></td>
      <td>
        <%= link_to 'Show', participant_path(participant) %>
        <%= link_to 'Edit', edit_participant_path(participant) %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Participant', new_participant_path %>
