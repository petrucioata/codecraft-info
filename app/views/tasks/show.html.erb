<div class='panel panel-default'>
  <div class='panel-heading'>
    <h1>Task: <%= @task.name %></h1>
  </div>
  <dl class='dl-horizontal'>
    <dt>Name:       </dt> <dd><%= @task.name %></dd>
    <dt>Author:     </dt> <dd><%= @task.author %></dd>
    <dt>Description:</dt> <dd><%= @task.description %></dd>
    <dt>Edition:    </dt> <dd><%= @task.edition_name %></dd>
    <dt>Test cases: </dt>
    <% if @task.test_cases.attached? %>
      <% @task.test_cases.each do |test_case| %>
        <dd><%= link_to test_case.filename, rails_blob_path(test_case, disposition: 'attachment') %></dd>
      <% end %>
    <% else %>
      <dd>There are no test cases</dd>
    <% end %>
  </dl>
</div>

<hr>
<% if current_user %>
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Tasks', tasks_path, class: 'btn btn-primary' %>
